<h3>Page structure</h3>
<table>
    <tbody>
    <tr>
        <th class="font-normal text-muted">Title</th>
        <td class="font-normal">
            <strong>{{ collector.title }}</strong>
            {% if collector.title|length == 0 %}
                <div class="card status-warning">
                    <strong>Warning : missing title (recommended : 50 - 60 characters)</strong>
                </div>
            {% else %}
                <p>
                    <small class="text-muted">{{ collector.title|length }} characters (recommended : 50 - 60 characters)</small>
                </p>
            {% endif %}
        </td>
    </tr>
    <tr>
        <th class="font-normal text-muted">Meta description</th>
        <td class="font-normal">
            <strong>{{ collector.metaDescription }}</strong>
            {% if collector.metaDescription|length == 0 %}
                <div class="card status-warning">
                    <strong>Warning : meta description is missing (recommended : 50 - 160 characters)</strong>
                </div>
            {% else %}
                <p>
                    <small class="text-muted">{{ collector.metaDescription|length }} characters (recommended : 50 - 160 characters)  </small>
                </p>
            {% endif %}
        </td>
    </tr>
    <tr>
        <th class="font-normal text-muted">First H1</th>
        <td class="font-normal">
            {% if collector.h1 is empty %}
                <div class="card status-warning">
                    <strong>Warning: no H1 found in this page.</strong>
                </div>
            {% else %}
                <strong>{{ collector.h1 }}</strong>
            {% endif %}
        </td>
    </tr>
    <tr>
        <th class="font-normal text-muted">Headings</th>

        <td class="font-normal">
            {% set headings = collector.headlinesTree %}
            {% set level = 1 %}
            {% block treeHeading %}
                <ul class="headings-tree">
                    {% for heading in headings %}
                        <li>
                            {% if level != heading.level %}
                                <span class="icon-danger status-error text-warning">
                                        {{ include('@ElaoAccesseo/profiler/danger.svg') }}
                                        <strong>H{{ heading.level }}:</strong>
                                    </span>
                                {{ heading.content }}
                            {% else %}
                                <span class="">
                                        <strong>H{{ heading.level }}:</strong>
                                    </span>
                                {{ heading.content }}
                            {% endif %}
                        </li>
                        {% set headings = heading.children %}
                        {% set level = level+1 %}
                        {{ block ("treeHeading") }}
                        {% set level = level-1 %}
                       {% else%}
                           <div class="empty">
                               <p>No headings found on this page</p>
                           </div>
                    {% endfor %}
                </ul>
            {% endblock %}
        </td>
    </tbody>
    </tr>
</table>
